<div style="margin-left: 50px; margin-right: 50px; margin-top: 2em;">
   <div class="row">
      <div class=col-12>
         <h2><%="Search results for " + params[:search] %></h2>
      </div>
   </div>

   <table>
   <thead>
     <th>No.</th>
     <th>First Name</th>
     <th>Last Name</th>
     <th>Admission ID</th>
     <th>Email</th>
   </thead>
   <tbody>
   User result :<%= @result.size %>
   <% @result.each_with_index do |user, index| %>

   <% if user.type == "Doctor" %>
   <thead>
   <th>Doctor</th>
   </thead>
   <td><%= index + 1%></td>
   <td><%= user.first_name%></td>
   <td><%= user.last_name%></td> 
   <td><%= user.admission_id %></td> 
   <td><%= user.email %></td>
   <%end%>
   <%end%>
   <thead>
   <th>Patient</th>
   <% @result.each_with_index do |user, index| %>

   <% if user.type == "Patient" %>
   </thead>
   <td><%= index + 1%></td>
   <td><%= link_to user.first_name, patient_health_profile_path(user.id, @health_profile) %></td>
   <td><%= link_to user.last_name, patient_health_profile_path(user.id, @health_profile) %></td> 
   <td><%= link_to user.admission_id, patient_health_profile_path(user.id, @health_profile) %></td> 
   <td><%= user.email %></td>
   <%end%> 
    </tbody>
   <%end%>
   </tbody>
   </table>
</div>