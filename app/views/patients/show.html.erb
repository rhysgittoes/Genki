
<br>
<div class="patient-form">
   <%if current_user.avatar.url == nil%>
        <%=image_tag("https://s3-ap-southeast-1.amazonaws.com/genkigroup/uploads/images/profile.jpg", id: "profile_img")%>
      <%else%>
        <%=image_tag(current_user.avatar_url.to_s, id: "profile_img")%>
    <%end%>
  <div>
    <h4><u>Personal details</u></h4>
    <p>
      <span>First name: </span>
      <span><%= @patient.first_name %></span>
    </p>
    <p>
      <span>Last name: </span>
      <span><%= @patient.last_name %></span>
    </p>
    <p>
      <span>Email: </span>
      <span><%= @patient.email %></span>
    </p>
    <p>
      <span>Birthday: </span>
      <span><%= @patient.birthday %></span>
    </p>
    <p>
      <span>Language: </span>
      <span><%= @patient.language %></span>
    </p>
    <p>
      <span>City: </span>
      <span><%= @patient.city %></span>
    </p>
    <p>
      <span>Country: </span>
      <span><%= @patient.country %></span>
    </p>
  </div>
  <div>
    <%if @patient.id == current_user.id %>
    <span><%= link_to "Edit Profile", edit_patient_path(current_user) %></span>
    <%end%>
  </div>
</div>

