<div class="health-profile-edit-and-create">
    <%= form_for [@patient, @health_profile], :html => { :class => "health-profile-edit-and-create-form"  } do |f|%>

    <div id = "form-list">
    <%= f.label :blood_type%><br>
    <%#= f.text_field :blood_type%>
    <%= f.select(:blood_type, ["A+","A-","B+","B-","AB+","AB-","O+","O-","Unknown"])%><br>
    <%= f.label :weight %>(kg)<br>
    <%= f.text_field :weight%><br>
    <%= f.label :height%>(m)<br>
    <%= f.text_field :height%><br>
    <%= f.label :insurer%><br>
    <%= f.text_field :insurer%><br>
    </div>
    
    <% if url_for(:only_path => true) == "/patients/#{@patient.id}/health_profiles/new" %>
        <%= render "health_profiles/associationsform", f: f %>
    <% end %>
    
    <br>
    
    <div class="submit-field" >
        <span>
         <%= f.submit "Update profile", :class => "btn btn-outline-dark" %>
         <% end %>
        </span>
     
         <span>
          <%#= form_tag(patient_health_profile_path, method: "get") do %>
              <%#= submit_tag "Cancel", :name => nil, :html => {:class =>"health-profile-form-submit"} %>
          <%# end %>
         </span>
    </div>
</div>


